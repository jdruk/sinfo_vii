
<div class="row">
  <div class="large-12 columns">

    <h1>Painel Administrador</h1>
    <div class="large-6 columns">
      <h3>Artigos</h3>  
        <table>
              <thead>
                <tr>
                  <th>Artigo</th>
                  <th>Autor</th>
                  <th colspan="2"></th>
                </tr> 
              </thead>
              <tbody>
                <% @artigos.each do |artigo| %>
                  <tr>
                    <td><%= artigo.article %></td>
                    <td><%= artigo.user.name %></td>
                    <td><%= link_to 'Exibir', artigo %></td>
                    <td><%= link_to 'Apagar', artigo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                  </tr>
                <% end %>
              </tbody>    
          </table>
  
    </div>
    <div class="large-6 columns">
      <h3>Cursos</h3>

        <table>
            <thead>
              <tr>
                  <th>Name</th>
                <th>Description</th>
                <th>Categoria</th>
                  <th colspan="2"></th>
              </tr>
            </thead>

            <tbody>
              <% @courses.each do |course| %>
                <tr>
                  <td><%= course.name %></td>
                  <td><%= course.description %></td>
                  <td><%= course.category %></td>
                  <td><%= link_to 'Exibir', course %></td>
                  <td><%= link_to 'Apagar', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
              <% end %>
            </tbody>
            <%= link_to 'Novo Curso', new_course_path %>
        </table>

      

    </div>
    
    <div class="large-6 columns">
      <h3>Inscritos</h3>

        <table>
            <thead>
              <tr>
                  <th>e-mail</th>
                  <th>Estado</th>
                  <th>id</th>
                  <th colspan="2"></th>
              </tr>
            </thead>

            <tbody>
              <% @users.each do |user| %>
                <tr>
                  <td><%= user.email %></td>
                  <td><%= user.role %></td>
                  <td><%= user.id %></td>
                </tr>
              <% end %>
            </tbody>
          </table>

      

    </div>
  </div>  
</div>
